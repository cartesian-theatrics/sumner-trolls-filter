{
    "manifest_version": 2,
    "name": "The Comment Illusion",

    "description": "Filter's trolls",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://www.themoneyillusion.com/*"],
            "js": ["filter_trolls.js"]
        }
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "plugin.html"
    },
    "permissions": [
        "activeTab"
    ]
}
